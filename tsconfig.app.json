{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": false,
    "rootDir": "./src", // –∏—Å—Ö–æ–¥–Ω–∏–∫–∏ —Ç–æ–ª—å–∫–æ —ç—Ç–æ–π –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
    "outDir": "../../dist/libs/config", // üì¶ –æ–±—â–∏–π dist
    "declarationDir": "../../dist/libs/config", // üìÑ –¥–µ–∫–ª–∞—Ä–∞—Ü–∏–∏ —Ä—è–¥–æ–º —Å js
    "tsBuildInfoFile": "../../dist/libs/config.tsbuildinfo", // ‚úÖ —É–Ω–∏–∫–∞–ª—å–Ω—ã–π build cache
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true, // ‚úÖ —É—á–∞—Å—Ç–≤—É–µ—Ç –≤ project references
    "baseUrl": "../../",
    "paths": {
      "@barfinex/types": [
        "libs/types/src"
      ],
      "@barfinex/utils": [
        "libs/utils/src"
      ],
      "@barfinex/utils/*": [
        "libs/utils/src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
